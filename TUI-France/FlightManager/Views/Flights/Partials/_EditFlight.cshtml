@using FlightManager.App_Ressources;

@model FlightManager.Models.FlightModel

<section id="first-tab-group" class="tabgroup">
    <div id="tab1">
        <div class="submit-form">
            <h4>@Html.Raw(FlightRessource.EditFlightTitle)</h4>
            @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "edit-form-submit" }))
            {
            <div class="row">
                <div class="col-md-6">
                    @Html.HiddenFor(m => m.Id)
                    <fieldset>
                        @Html.Label(FlightRessource.CreateNewFlightFrom)
                        @Html.DropDownListFor(m => m.DepartureAirportCode, new SelectList(Model.Airports, "Value", "Text"), "Select a location...")
                    </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset>
                        @Html.Label(FlightRessource.CreateNewFlightTo)
                        @Html.DropDownListFor(m => m.DestinationAirportCode, new SelectList(Model.Airports, "Value", "Text"), "Select a location...")
                    </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset>
                        @Html.Label(FlightRessource.DepartureDate)
                        @Html.TextBoxFor(x => x.DepartureDateUtc, new { @class = "form-control date", @id = "deparure", @placeholder = FlightRessource.SelectDate })
                    </fieldset>
                </div>

                <div class="col-md-6">
                    <fieldset>
                        @Html.Label($"{FlightRessource.Distance} ({ FlightRessource.DistanceM})")
                        @Html.TextBox("Distance", (Model.Distance/1000).ToString("0.00"), new { @class = "form-control", @readonly = "true" })
                    </fieldset>
                </div>

                <div class="col-md-6">
                    <fieldset>
                        @Html.Label($"{FlightRessource.FuelAmount} ({ FlightRessource.FuelAmountLiters})")
                        @Html.TextBox("FuelAmount", Model.FuelAmount.ToString("0.00"), new { @class = "form-control", @readonly="true"})
                    </fieldset>
                </div>

                <div class="col-md-6">
                    <fieldset>
                        <button type="button" id="edit-form-submit-btn" class="btn">@FlightRessource.EditFlightBTN</button>
                    </fieldset>
                </div>
                <div class="col-md-6 div-error">
                    <label class="has-error error"></label>
                </div>
            </div>
            }
        </div>
    </div>
</section>

